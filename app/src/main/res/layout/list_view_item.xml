<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/itemImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/itemImage"
        android:textColor="#000000"
        android:id="@+id/carTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/itemImage"
        android:textColor="#000000"
        android:id="@+id/car_location"
        android:layout_below="@+id/carTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:id="@+id/car_year"
        android:layout_toRightOf="@+id/carTitle"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/carTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:id="@+id/zipcode"
        android:layout_toRightOf="@+id/car_location"
        android:layout_alignTop="@+id/car_location"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>